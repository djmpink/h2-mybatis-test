<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.teamstack.repository.LogMapper">

    <resultMap id="resultMap" type="cn.teamstack.entity.LogConfig">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="path" property="path"/>
    </resultMap>

    <select id="findById" resultMap="resultMap">
        SELECT
            id,
            name,
            path
        FROM T_LOG_CONFIG
        WHERE
            log_id = #{logId}
    </select>

    <select id="find" resultMap="resultMap">
        SELECT
        id,
        log_id,
        ip,
        name,
        path,
        type,
        tags,
        createUserId,
        modifyUserId,
        createTime,
        modifyTime,
        isValid
        FROM T_LOG_CONFIG
        WHERE 1 = 1
        ORDER BY createTime DESC
        <if test="offset != null and pageSize!= null">
            <![CDATA[
                LIMIT #{offset},#{pageSize}
            ]]>
        </if>
    </select>

    <select id="count" resultType="java.lang.Long">
        SELECT count(1)
        FROM T_LOG_CONFIG;
    </select>

    <insert id="insert" parameterType="cn.teamstack.entity.LogConfig">
        INSERT INTO T_LOG_CONFIG
        (
            log_id,
            ip,
            name,
            path,
            type,
            tags,
            createUserId,
            modifyUserId,
            createTime,
            modifyTime,
            isValid
        )
        VALUES
            (
                #{logId},
                #{ip},
                #{name},
                #{path},
                #{type},
                #{tags},
                #{createUserId},
                #{modifyUserId},
                #{createTime},
                #{modifyTime},
                #{isValid}
            )
    </insert>

    <update id="update" parameterType="cn.teamstack.entity.LogConfig">
        UPDATE T_LOG_CONFIG
        <set>
            <if test="ip != null"> ip= #{ip},</if>
            <if test="name != null">name = #{name},</if>
            <if test="path != null">path = #{path},</if>
            <if test="type != null">type = #{type},</if>
            <if test="tags != null">tags = #{tags},</if>
            <if test="modifyUserId != null">modifyUserId = #{modifyUserId},</if>
            <if test="modifyTime != null">modifyTime = #{modifyTime}</if>
        </set>
        WHERE log_id = #{logConfig.logId}
    </update>
</mapper>